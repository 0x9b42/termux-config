#!/bin/env bash
[ ! $1 ] &&
    echo 'USAGE: <query> [-d dir] [-e ext] [-i]' && exit 1

query="$1" dir=. col=--color=auto
shift

while getopts "d:e:t:ir:" opt
do
    case $opt in
        d) dir="$OPTARG" ;;
        e) pat="$OPTARG" ;;
        t) typ="$OPTARG" ;;
        r) r=true; rep="$OPTARG" ;;
        i) ign=i ;;
        *)
            echo "bejirlah: " >&2;
            exit 1
            ;;
    esac
done

[ ! -d "$dir" ] && echo "[$dir]: no such dir" && exit 1

_f="find '$dir' -type f"
[ "$pat" ] && _f="$_f -iname '*.$pat'"

[ $r ] && {
    all=$(eval "$_f" | xargs grep -E$ign "$query" $col)
    rc=$(echo "$all" | wc -l)
    unik=$(echo "$all" | cut -d: -f1 | sort | uniq)
    uc=$(echo "$unik" | wc -l)
    for i in ${unik[@]}
    do
        sed -i -E "s|$query|$rep|g" "$i"
    done
    echo -e "\e[1;33m$rc replacement(s) within $uc file(s)\e[0m"
} || {
    eval "$_f" | xargs grep -En$ign "$query" $col
}
